#Dockerfile

# Use official nginx image
FROM nginx:latest

# Copy your static website into Nginx public directory
COPY website/ /usr/share/nginx/html/

# Expose port 80
EXPOSE 80



docker build -t my-nginx-webapp .

docker run -d --name webapp -p 8080:80 my-nginx-webapp

